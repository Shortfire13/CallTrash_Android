<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Wallet Anda :" />

        <TextView
            android:layout_marginLeft="220dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Rp.20000" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/btn_atas"
        android:orientation="horizontal"
        android:paddingLeft="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@drawable/icons8_truck_125px_3"
            android:background="@color/white"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="100dp"
            android:background="@color/white"
            android:src="@drawable/icons8_clock_125px_4" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/btn_atas"
        android:id="@+id/linear_tengah"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="100dp"
            android:text="Jemput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="128dp"
            android:text="Riwayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_bawah"
        android:layout_below="@id/linear_tengah"
        android:orientation="horizontal"
        android:paddingLeft="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:background="@color/white"
            android:src="@drawable/icons8_male_user_125px_2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp" />

        <ImageButton
            android:background="@color/white"
            android:src="@drawable/icons8_inscription_125px_3"
            android:layout_marginLeft="24dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linear_bawah"
        android:id="@+id/text_bawah"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="103dp"
            android:text="Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="128dp"
            android:text="Transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>